{
  "scripts": {
    "build": "run-s type:check clean rollup",
    "clean": "rimraf dist",
    "coverage": "jest --coverage",
    "nollup": "cross-env NODE_ENV=development nollup -c --hot --content-base public",
    "rollup": "cross-env NODE_ENV=production rollup -c",
    "serve": "sirv dist",
    "start": "run-p nollup type:watch",
    "test": "jest --verbose",
    "type:check": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "solid-js": "^0.18.8"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-url": "^5.0.1",
    "@testing-library/dom": "^7.16.2",
    "@testing-library/jest-dom": "^5.10.1",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-solid": "^0.18.8",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-testing-library": "^3.3.1",
    "jest": "^26.0.1",
    "nollup": "github:PepsRyuu/nollup",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.17.1",
    "rollup-plugin-hot-css": "0.3.0",
    "rollup-plugin-static-files": "0.1.0",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    },
    "roots": [
      "src"
    ],
    "preset": "ts-jest",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "assets",
      ".css.d.ts"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ]
  }
}
